<!-- ExportOptions.plist -->
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Phương thức xuất file: enterprise cho tài khoản doanh nghiệp -->
    <key>method</key>
    <string>enterprise</string>

    <!-- Team ID của tài khoản Apple Developer của bạn -->
    <key>teamID</key>
    <string>YOUR_TEAM_ID</string> 

    <!-- Tắt bitcode, thường không cần cho phân phối nội bộ -->
    <key>compileBitcode</key>
    <false/>

    <!-- Quan trọng: Phần này để tạo manifest.plist cho phân phối OTA -->
    <key>manifest</key>
    <dict>
        <!-- URL này sẽ được script của bạn ghi đè sau, nhưng nó phải tồn tại -->
        <key>appURL</key>
        <string>https://placeholder.com/app.ipa</string>

        <!-- (Tùy chọn) URL đến icon 57x57 -->
        <key>displayImageURL</key>
        <string>https://placeholder.com/icon_57x57.png</string>

        <!-- (Tùy chọn) URL đến icon 512x512 -->
        <key>fullSizeImageURL</key>
        <string>https://placeholder.com/icon_512x512.png</string>
    </dict>
</dict>
</plist>